<div class="collapse navbar-collapse" id="home-nav">
    <ul class="nav navbar-nav navbar-right">
            <form action="/logout" method="POST">
                <button class="btn btn-link btn-logout" type="submit">logout</button>
            </form>
    </div>
<div class="container-fluid">
  <div class="home-heading text-center row">
    <div class="home-heading-wrapper">

            <span class="index-header-font">my journal<span class="header-dot">.</span></span>

          </div>

          <a href="/journals/new" class="new-btn" role="button">new journal entry</a>
  <div class="journal-row row">
      <% journals.forEach((journal) => { %>
        <div class="col-sm-3 home-journal-box">
          <br>
          <div class="journal-info-wrapper journal-box">
            <a role="button" href="/journals/<%= journal._id %>">
              <span><%= journal.inputFormattedDate %></span>
            </a> 
            
          </div>
        </div>
      <%  }) %>
    </div>
    <br>

    <form action="journals/month-select" method="get">
    <select>
        <option value="0">January</option>
        <option value="1">February</option>
        <option value="2">March</option>
        <option value="3">April</option>
        <option value="4">May</option>
        <option value="5">June</option>
        <option value="6">July</option>
        <option value="7">August</option>
        <option value="8">September</option>
        <option value="9">October</option>
        <option value="10">November</option>
        <option value="11">December</option>
      </select>
      <button>Search</button>
    </form>



    

</div>
</div>
